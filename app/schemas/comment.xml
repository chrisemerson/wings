<?xml version="1.0" encoding="UTF-8"?>

<table name="comments">
  <columns>
    <column name="comment_id" type="int" primary_key="yes" auto_number="yes" />
    <column name="post_id" type="int" />
    <column name="comment_title" type="varchar" size="255" />
    <column name="comment_body" type="text" />
    <column name="added_date" type="datetime" default="NOW()" />
    <column name="deleted_date" type="datetime" nullable="yes" />
    <column name="available" type="tinyint" size="1" default="1" />
  </columns>

  <relationships>
    <relationship model="Post" type="manytoone">
      <column local="post_id" foreign="post_id" />
    </relationship>
  </relationships>
</table>