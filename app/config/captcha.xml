<?xml version="1.0" encoding="UTF-8"?>

<captcha>
 <!-- List of allowed characters in code -->
 <allowedcharacters>abcdeghjkmnpqrsuvwxyz23456789</allowedcharacters>

 <!-- Length of captcha code to be generated -->
 <captchalength>5</captchalength>

 <!-- Session name to be used with captcha -->
 <sessionname>captcha_code</sessionname>

 <!-- Whether a case sensitive check is made -->
 <casesensitive>false</casesensitive>
 
 <image>
  <!-- Width of the final image -->
  <width>275</width>

  <!-- Height of the final image -->
  <height>75</height>

  <!-- Directory containing background images -->
  <backgroundimagesdirectory>captcha/backgrounds/</backgroundimagesdirectory>
 </image>
 
 <spacing>
  <!-- Spacing to the left of the first letter -->
  <paddingleft>20</paddingleft>
  
  <!-- Spacing between each letter -->
  <letterpadding>3</letterpadding>

  <!-- Amount that the height of each letter can vary by -->
  <heightvariation>0</heightvariation> 
 </spacing>
 
 <text>
  <!-- Range of tilt angle the letters can have (eg. 30 means +/- 15 degrees) -->
  <fonttilt>40</fonttilt>
  
  <!-- Font size in pixels -->
  <fontsize>40</fontsize>
  
  <!-- Directory containing fonts -->  
  <fontdirectory>captcha/fonts/</fontdirectory>
 </text>
 
 <color>
  <!-- Darkest color allowed for the random lettering colors -->
  <darkestcolor>0</darkestcolor>
  
  <!-- Lightest color allowed for the random lettering colors -->
  <lightestcolor>200</lightestcolor>
  
  <!-- Number of random colors to generate -->
  <numberofcolors>100</numberofcolors> 
 </color>
 
 <noise>
  <!-- Amount of noise set in the image. 0 for none, up to 10,000 for lots -->
  <noiseamount>2000</noiseamount>

  <!-- Number of lines to draw going through the text, before adding noise -->
  <numberoflines>0</numberoflines>

  <!-- Thickness (in pixels) of the lines through the text -->
  <linethickness>1</linethickness>

  <!-- Set from 0 upwards. Probability that the lines will go more horizontal, rather than diagonal -->
  <horizontallinesprobability>5</horizontallinesprobability>
 </noise>
</captcha>