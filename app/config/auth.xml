<?xml version="1.0" encoding="utf-8"?>

<auth>
  <users>
    <model>User</model>

    <fields>
      <id>user_id</id>
      <username>user_email</username>
      <password>user_password</password>
    </fields>
  </users>

  <rememberme>
    <enabled>1</enabled>

    <rememberedlogins>
      <model>RememberedLogin</model>

      <fields>
        <userid>user_id</userid>
        <token>remembered_login_token</token>
        <serial>remembered_login_serial</serial>
        <expiry>remembered_login_expiry</expiry>
      </fields>
    </rememberedlogins>

    <remembereddays>30</remembereddays>

    <defaultcookiename>bsauth</defaultcookiename>
  </rememberme>

  <uris>
    <requirelogin>user/login</requirelogin>
    <requirelogout>user/my-account</requirelogout>
    <requirereauth>user/login</requirereauth>
    <redirectafterlogin>user/my-account</redirectafterlogin>
  </uris>

  <salt>vgw3e4%^W4gvqwaFA£5vaWFA!£%FVazswetzvbS£%FA</salt>

  <sessionname>userauth</sessionname>
</auth>